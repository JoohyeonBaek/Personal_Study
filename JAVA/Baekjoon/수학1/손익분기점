import java.util.*;

public class Main {	
	public static void main(String[] args) throws Exception {
		int a,b,c;
		int temp;
		Scanner sc = new Scanner(System.in);
		a = sc.nextInt();
		b = sc.nextInt();
		c = sc.nextInt();
		
		try {
			temp = a / (c-b);
			if(c-b<0)
				System.out.println("-1");
			else
				System.out.println(temp+1);
		} catch(ArithmeticException e) {
			System.out.println("-1");
		}		
	}
}
